@using WebMatrix.Data
<!DOCTYPE html>
<style>
    body {
        background-color: burlywood
    }
</style>
<html>
<head>
    <title>Add Wine and Review</title>
</head>
<body>
    <h1 class="text-bg-light text-center">Add Wine and Review</h1>
    <form action="submit_wine_and_review.php" method="post">
        <label for="wine_name">Wine Name:</label>
        <input type="text" id="wine_name" name="wine_name" required><br><br>

        <label for="wine_details">Wine Details:</label><br>
        <textarea id="wine_details" name="wine_details" rows="4" cols="50" required></textarea><br><br>

        <label for="review_title">Review Title:</label>
        <input type="text" id="review_title" name="review_title" required><br><br>

        <label for="review_text">Review Text:</label><br>
        <textarea id="review_text" name="review_text" rows="4" cols="50" required></textarea><br><br>

        <label for="rating">Rating (1-5):</label>
        <input type="number" id="rating" name="rating" min="1" max="5" required><br><br>

        <div class="col-12">
        <button class="btn btn-primary" type="submit">Submit form</button>
        </div>
    </form>
</body>
</html>
